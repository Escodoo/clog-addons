<odoo>

    <record model="ir.ui.view" id="move_line_tree_grouped_view">
        <field name="name">account.move.line.tree.grouped (in dominio_fiscal)</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field
                    name="dominio_state"
                    optional="show"
                    widget="badge"
                    decoration-success="dominio_state == 'stored'"
                    decoration-danger="dominio_state == 'error'"
                />
                <field name="dominio_response" optional="show" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="move_line_form_view">
        <field name="name">account.move.line.form (in dominio_fiscal)</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']/group" position="inside">
                <group string="Dominio">
                    <field
                        name="dominio_state"
                        optional="show"
                        widget="badge"
                        decoration-success="dominio_state == 'stored'"
                        decoration-danger="dominio_state == 'error'"
                    />
                    <field name="dominio_response" optional="show" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
