<odoo>

    <record model="ir.ui.view" id="l10n_br_fiscal_closing_form_view">
        <field name="name">l10n_br_fiscal.closing.form (in dominio_fiscal)</field>
        <field name="model">l10n_br_fiscal.closing</field>
        <field name="inherit_id" ref="l10n_br_fiscal_closing.fiscal_closing_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <button
                    string="Send Document"
                    name="action_dominio_send"
                    attrs="{'invisible': [('state', 'not in', 'open')]}"
                    type="object"
                    class="oe_highlight"
                />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Incoming Receipt">
                    <field name="incoming_payment_move_line_ids" readonly="1" />
                </page>
                <page string="Outgoing Receipt">
                    <field name="outgoing_payment_move_line_ids" readonly="1" />
                </page>
            </xpath>
        </field>
    </record>


</odoo>
